{
  "name": "hop-email",
  "version": "0.9.0",
  "description": "Email server for Hop!",
  "author": "Robert Saunders and James Simpson",
  "scripts": {
    "dev": "cross-env npm run clean && mjml ./templates/*.mjml -o ./dist/",
