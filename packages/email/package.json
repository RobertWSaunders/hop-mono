    "clean": "cross-env rimraf ./dist && mkdir ./dist"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.2.1"
  },
  "devDependencies": {
    "mustache": "^2.3.0",
    "cross-env": "^5.1.3",
    "mjml": "^4.0.5",
    "rimraf": "^2.6.2"
  }
}
